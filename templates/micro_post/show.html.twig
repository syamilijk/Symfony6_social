{% extends 'base.html.twig' %}

{% block title %}Post-
	{{post.title}}
{% endblock %}

{% block body %}
	<h3>{{post.title}}</h3>
	<div>{{post.text}}</div>
	<div>
		{% if date(post.created) < date('-1Year') %}
			<p>Older than a year</p>
		{% else %}
			{{ post.created|date('d/m/Y')}}
		{% endif %}
	</div>

{% endblock %}
